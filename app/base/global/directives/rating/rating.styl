normal-width = 32px
normal-height = 34px
small-width = 12px
small-height = 11px

stars
  flow(row)
  height normal-height
  align-items center


star
  color blue
  width normal-width
  height normal-height
  margin 0 5px

  bgimage '/img/rating_empty.png'

  &.full
    image '/img/rating_blue.png'

  &.half-full
    image '/img/rating_blue.png'


stars.small
  height small-height

  star
    margin 0 2px
    width small-width
    height small-height
    image '/img/rating_small_empty.png'

    &.full
      image '/img/rating_small.png'
