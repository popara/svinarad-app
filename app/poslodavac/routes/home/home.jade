  
nav.el-menu 
  button(ui-sref="app.newjob") Novi Posao 
  button.small(ui-sref="logout") Odjava

.jobs 
  h1 Poslovi na koje se ljudi prijavljuju
  .job(ng-repeat="j in model.jobs", ng-if="isOpen(j)") 
    button.title(ui-sref="app.job({id: j.$id})") {{ j.title }}
      span(ng-if="j.applicants") &nbsp;- ({{ j.applicants | objlen }} prijavljen)

.jobs 
  h1 Poslovi koji su u procesu izvrsavanja
  .job(ng-repeat="j in model.jobs", ng-if="isDrafted(j)")
    button.title(ui-sref="app.job({id: j.$id})") {{ j.title }} 
    h3 {{ j.percentage }}% gotovi

.jobs 
  h1 Poslovi koje treba da potvrdite i platite! 
  .job(ng-repeat="j in model.jobs", ng-if="isWorkdone(j) || isWorkerpayed(j)") 
    button.title(ui-sref="app.job({id: j.$id})") {{ j.worker.name }} - {{ j.title }}
  
    
