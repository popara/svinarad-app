.home
  flow(column)

  section
    background url('/img/landingPphoto.jpg') no-repeat brand-color
    background-position center bottom
    background-size cover
    color gray-9

    min-height 350px

  header
    color darker-brand
    font-size 48px
    text-align center
    padding 30px 0
    font-family Oswald, Helvetica, Arial
    font-weight 700

  .intro
    font-size 45px
    text-align center
    font-family Lobster, Georgia
    text-shadow 0 2px 2px black
    position relative
    min-height 380px

.cta
  margin-top 90px

.home
  .intro a
  button
    font-family Oswald, Helvetica, Arial
    text-decoration none
    text-shadow-color rgba(0, 0, 0, .2)
    cursor pointer
    outline none
    color gray-8
    border none
    padding 20px 30px
    font-size 20px
    border-radius 5px
    border-bottom 3px solid white
    font-weight 700
    margin 0 50px
    transition all .3s ease-in
    &.crveni
      background brand-color
      border-bottom-color darker-brand
      &:hover
        background darker-brand
        border-bottom-color lighter-brand

    &.plavi
      background ligher-blue
      border-bottom-color blue-color
      &:hover
        background blue-color
        border-bottom-color ligher-blue

.overlay-content
  z-index 2
  absolute top bottom left right
  padding-top 150px

.shade-cover
  background darker-brand
  absolute top bottom left right
  opacity .4

section.kako-radi-rad
  background gray-8
  color brand-color
  text-align center

  h2
    margin-top 60px
    font-size 36px

.step
  min-height 130px
