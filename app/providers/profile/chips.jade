
md-input-container 
  label {{ placeholder }}
  input(type="text", ng-model="text", ng-enter="add(text)")

div(layout="row", layout-wrap)
  chip(ng-repeat="c in model", layout="row") 
    div {{ c }}
    md-button.md-icon-button(ng-click="delete(c)", aria-label="Remove {{ placeholder }}")
      ng-md-icon(icon="cancel")
