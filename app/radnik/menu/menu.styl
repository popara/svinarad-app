menu-snr
  background-color gray-1
  flow(column)
  margin-left 10px
  margin-right 20px
  max-width 200px 

  brand
    margin 10px 5px
    margin-bottom 30px
    h3
      font-size 20px
      text-transform uppercase
      font-family Oswald, Impact
      color brand-color



  ribbon
    flow(column)
    padding-left 10px
    padding-right 10px
    padding-bottom 30px
    min-width 150px
    .divider
      width 100%
      height 1px
      background-color gray-2
      margin 10px 0

    a
      color gray-7
      font-size 14px
      padding 3px 4px
      padding-top 20px
      margin-bottom 20px
      &:hover
        color white

    position relative
    w = 100px
    h = 40px
    c = gray-1

    &:before
      absolute bottom (h*-1)  left 0
      border-width h w 0 0
      border-color gray-1 transparent transparent transparent
    &:after
      absolute bottom (h*-1) right 0
      border-width 0 w h 0
      border-color transparent gray-1 transparent transparent


    &:before
    &:after
      content ""
      width 0
      height 0
      border-style solid
