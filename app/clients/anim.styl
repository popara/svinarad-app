duration = .3s

body >
  [ui-view].ng-enter
    position absolute
    transition-duration duration
    opacity 0.9


  [ui-view].ng-enter-active
    position absolute
    opacity 1



.loader
  height: 4px
  width: 100%
  position: relative
  overflow: hidden
  background-color: #ddd

.loader:before
  display: block
  position: absolute
  content: ""
  left: -200px
  width: 200px
  height: 4px
  background-color: brand-color
  animation: loading 2s linear infinite


@keyframes loading
  0%
    left: -200px
    width: 30%

  50%
    width: 30%

  70%
    width: 70%

  80%
    left: 50%

  95%
    left: 120%

  100%
    left: 100%
