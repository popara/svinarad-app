@require nib


.signup
.login
  .narrow-container
     align-self(center)


.signup

  flow(column)
  background linear-gradient(top, #1EB4E1, #1165F8)
  padding 10px 30px
  align-items stretch


  .small-logo
    height 60px
    margin-bottom 50px

  .facebook
    align-self center

  h1
    font-weight 500
    margin-bottom 30px

  h6
    text-transform uppercase
    margin-top 40px
    margin-bottom 40px
    opacity .7
    line-height 20px

    a
      color white
      text-decoration none
      font-weight 600


  .error
    color blend(red, white, 100%)
    padding 20px
    background darkred
    border-radius 6px
    border 2px solid blend(red, white, 70%)

  button.attempt
    margin 0 45px




.signup
.login
  background-size cover!important
  min-height 100vh
  color white


  h1
    text-transform uppercase
    letter-spacing 2px

  .facebook
    margin-bottom 20px

  h2
    font-size 18px
    margin-bottom 30px
    text-transform uppercase

.login
  flow(column)
  image '/img/home_background.jpg'
  align-items center
  background-position top left
  h1
    font-size 24px
    margin-top 10px
    margin-bottom 40px

  .login-with-email
    flow(column)

    p
      margin 20px 0

    button
      margin-top 20px

    p.attempt
      flow(column)

  .sowrong
    @extends .narrow-container
    align-self center
    margin 30px
