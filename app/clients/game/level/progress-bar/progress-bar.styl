game-progress-bar
  flow(row)
  padding 10px 25px
  align-items center


percentage
  margin 0 5px
  border-radius 3px
  flex 1
  background gray-2
  height 3px
  border 1px solid white
  border-color rgba(0,0,0,.1)

  flow(row)
  indicator
    transition all ease-in .4s
    background brand-color

.end-badge
  width 50px
  height 50px

  background url('/img/test_medal.png') no-repeat center center
  background-size 50px 50px!important
