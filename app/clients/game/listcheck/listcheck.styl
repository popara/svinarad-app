checked-color = #C4E4F4

.list-check
  flow(column)
  .list-item
    transition all ease-out .2s
    background-color transparent
    text-align left
    position relative
    text-transform none
    letter-spacing 2px
    padding 18px 15px
    border-radius 0
    margin 0
    font-size 1.3em
    font-weight 300

    color brand-color
    cursor pointer

    +desktop()
      &:hover
        background-color lighten(checked-color, 55%)

  .checked
    transition all ease-out 1s
    background-color checked-color

    +desktop()
      &:hover
        background-color darken(checked-color, 30%)
        color white

    &:after
      content ''
      width 40px
      height 100%
      background url('/img/test_check_brand.png') no-repeat center center
      background-size 30px
      absolute top right 10px







.list-title
  font-size .9em
  color #79797B
  padding 18px 15px
  text-align left
  border-bottom 1px solid #E9E9E9
